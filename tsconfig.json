{
    "include": [
        "./src/*"
    ],

    "compilerOptions": {
        
        // Base options
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "moduleDetection": "force",
        "isolatedModules": true,
    
        // Strictness
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "lib": [
            "es2022"
        ],
    
        // Emit
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
    },

}